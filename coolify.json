{
  "build": {
    "type": "dockerfile",
    "dockerfile": "Dockerfile",
    "context": ".",
    "build_command": "composer install --optimize-autoloader --no-dev --no-interaction && npm install && npm run build",
    "start_command": "php-fpm"
  },
  "environment": {
    "APP_NAME": "The Missing Sock Photography",
    "APP_ENV": "production",
    "APP_DEBUG": "false",
    "LOG_LEVEL": "error"
  },
  "healthcheck": {
    "path": "/up",
    "interval": 30,
    "timeout": 3,
    "retries": 3
  },
  "post_deploy": [
    "php artisan migrate --force",
    "php artisan config:cache",
    "php artisan route:cache",
    "php artisan view:cache",
    "php artisan storage:link"
  ]
}

